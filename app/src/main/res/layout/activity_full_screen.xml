<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".FullScreenActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardViewFullScreen"
        android:layout_margin="1dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        app.cardUSeCompatPadding = "true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="400dp"
                android:layout_height="600dp"
                android:id="@+id/ImageFullView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_launcher_round"/>
            <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/nextIV"
                android:layout_below="@+id/ImageFullView"
            android:layout_alignParentRight="true"
            android:src="@drawable/baseline_keyboard_double_arrow_right_24"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/prevIV"
                android:layout_below="@+id/ImageFullView"
                android:layout_alignParentLeft="true"
                android:src="@drawable/baseline_keyboard_double_arrow_left_24"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Share"
            android:id="@+id/btnShare"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Download"
            android:layout_marginLeft="20dp"
            android:id="@+id/btnDownload"/>


    </LinearLayout>
</LinearLayout>